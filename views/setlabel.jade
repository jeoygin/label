doctype html
html
  head
    title= title
    script(type="text/javascript").
      function submitForm(label) {
        document.getElementById("label").value=label;
        document.getElementById("form").submit();
      }
    link(rel='stylesheet', href='/stylesheets/label.css')
  body
    div(style="height: 50px")
      h1= title
    div
      img(width="140", height="140", src="#{url}")
      form(id="form", name="setLabel", action="#{action}", method="post")
        input(type="hidden", name="label", id="label")
        each val, index in labels
          input(type="button", value="#{val}", onclick='submitForm("#{index}")')

